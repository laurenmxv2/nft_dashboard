{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@contexts/*": ["contexts/*"],
      "@mocks/*": ["mocks/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"],
      "@layout/*": ["layout/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
